VPATH= src
CFLAGS+= -Isrc

BUILD_DIR=build_nano/

TARGET=avr
MCU=atmega328p
CC=${TARGET}-gcc
OBJCOPY=${TARGET}-objcopy
SIZE=$(TARGET)-size

CFLAGS+= -Wall -Werror -Os
CFLAGS+= -mmcu=$(MCU) -DF_CPU=16000000UL 


LDFLAGS=  -mmcu=${MCU} 
LDFLAGS+= ${CFLAGS}



all: build_nano/accessory_servo.hex build_nano/accessory_signal.hex


accessory_servo_OBJS= accessory_servo.o dcc_decoder.o pwm_servo.o stub.o
build_nano/accessory_servo: $(addprefix $(BUILD_DIR), $(accessory_servo_OBJS))

build_nano/accessory_servo.hex: build_nano/accessory_servo


accessory_signal_OBJS= accessory_signal.o dcc_decoder.o stub.o tick.o
build_nano/accessory_signal: $(addprefix $(BUILD_DIR), $(accessory_signal_OBJS))

build_nano/accessory_signal.hex: build_nano/accessory_signal


clean:
	rm -rf build_nano/*


program_servo: build_nano/accessory_servo.hex
	sudo avrdude -c usbasp -p m328p -U flash:w:build_nano/accessory_servo.hex


program_signal: build_nano/accessory_signal.hex
	sudo avrdude -c usbasp -p m328p -U flash:w:build_nano/accessory_signal.hex



include build.mk

